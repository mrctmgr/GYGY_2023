<form asp-action="CreateMovie" asp-controller="Movies" method="post">
    <div class="row">
        <div class="form-group col-4 mb-3 text-light">
            <label for="Title">Title</label>
            <input type="text" class="form-control" id="Title" name="Title" placeholder="Enter Title">
        </div>
        <div class="form-group col-4 mb-3 text-light">
            <label for="Overview">Overview</label>
            <input type="text" class="form-control" id="Overview" name="Overview" placeholder="Enter Overview">
        </div>
        <div class="form-group col-4 mb-3 text-light">
            <label for="Tagline">Tagline</label>
            <input type="text" class="form-control" id="Tagline" name="Tagline" placeholder="Enter Tagline">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-4 mb-3 text-light">
            <label for="Budget">Budget</label>
            <input type="number" step="0.01" class="form-control" id="Budget" name="Budget" placeholder="Enter Budget">
        </div>
        <div class="form-group col-4 mb-3 text-light">
            <label for="Revenue">Revenue</label>
            <input type="number" step="0.01" class="form-control" id="Revenue" name="Revenue" placeholder="Enter Revenue">
        </div>
        <div class="form-group col-4 mb-3 text-light">
            <label for="ImdbUrl">ImdbUrl</label>
            <input type="url" class="form-control" id="ImdbUrl" name="ImdbUrl" placeholder="Enter ImdbUrl">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-4 mb-3 text-light">
            <label for="TmdbUrl">TmdbUrl</label>
            <input type="url" class="form-control" id="TmdbUrl" name="TmdbUrl" placeholder="Enter TmdbUrl">
        </div>
        <div class="form-group col-4 mb-3 text-light">
            <label for="PosterUrl">PosterUrl</label>
            <input type="url" class="form-control" id="PosterUrl" name="PosterUrl" placeholder="Enter PosterUrl">
        </div>
        <div class="form-group col-4 mb-3 text-light">
            <label for="BackdropUrl">BackdropUrl</label>
            <input type="url" class="form-control" id="BackdropUrl" name="BackdropUrl" placeholder="Enter BackdropUrl">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-4 mb-3 text-light">
            <label for="OriginalLanguage">OriginalLanguage</label>
            <input type="text" class="form-control" id="OriginalLanguage" name="OriginalLanguage" placeholder="Enter OriginalLanguage">
        </div>
        <div class="form-group col-4 mb-3 text-light">
            <label for="ReleaseDate">ReleaseDate</label>
            <input type="datetime" class="form-control" id="ReleaseDate" name="ReleaseDate" placeholder="Enter ReleaseDate">
        </div>
        <div class="form-group col-4 mb-3 text-light">
            <label for="Runtime">Runtime</label>
            <input type="number" step="0.01" class="form-control" id="Runtime" name="Runtime" placeholder="Enter Runtime">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-4 mb-3 text-light">
            <label for="Price">Price</label>
            <input type="number" step="0.01" class="form-control" id="Price" name="Price" placeholder="Enter Price">
        </div>
        <div class="form-group col-4 mb-3 text-light">
            <label for="CreatedDate">CreatedDate</label>
            <input type="datetime" class="form-control" id="CreatedDate" name="CreatedDate" placeholder="Enter CreatedDate">
        </div>
        <div class="form-group col-4 mb-3 text-light">
            <label for="UpdatedDate">UpdatedDate</label>
            <input type="datetime" class="form-control" id="UpdatedDate" name="UpdatedDate" placeholder="Enter UpdatedDate">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6 mb-3 text-light">
            <label for="UpdatedBy">UpdatedBy</label>
            <input type="text" class="form-control" id="UpdatedBy" name="UpdatedBy" placeholder="Enter UpdatedBy">
        </div>
        <div class="form-group col-6 mb-3 text-light">
            <label for="CreatedBy">CreatedBy</label>
            <input type="text" class="form-control" id="CreatedBy" name="CreatedBy" placeholder="Enter CreatedBy">
        </div>
    </div>

  <input type="submit" class="btn btn-primary" value="Save"/>
</form>